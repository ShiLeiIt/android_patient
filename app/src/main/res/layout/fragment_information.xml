<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/view_bg"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_course_back"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/iv_back"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/information_title"
                android:textColor="@color/app_userInfor"
                android:textSize="18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_visit_dialogue"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="@color/app_white">

            <ImageView
                android:id="@+id/iv_dialogue"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/dialogue"/>

            <TextView
                android:id="@+id/tv_dialogue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@id/iv_dialogue"
                android:text="@string/visitDialogue"
                android:textColor="@color/app_userInfor"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_dialogue_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dialogue_title"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_dialogue"
                android:text="您有一条新的回答，请点击查看。"
                android:textColor="@color/app_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_dialogue_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_text_num_bg"
                android:gravity="center"
                android:text="12"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_system_notice"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="@color/app_white">

            <ImageView
                android:id="@+id/iv_system_notice"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/system_notice"/>

            <TextView
                android:id="@+id/tv_system_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@id/iv_system_notice"
                android:text="@string/systemNotice"
                android:textColor="@color/app_userInfor"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_system_notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_system_notice_title"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_system_notice"
                android:text="您有一条新的回答，请点击查看。"
                android:textColor="@color/app_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_system_notice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_text_num_bg"
                android:gravity="center"
                android:text="12"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_doctor_notice"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="@color/app_white">

            <ImageView
                android:id="@+id/iv_doctor_notice"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/doctor_notice"/>

            <TextView
                android:id="@+id/tv_doctor_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@id/iv_doctor_notice"
                android:text="@string/doctorNotice"
                android:textColor="@color/app_userInfor"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_doctor_notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_doctor_notice_title"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_doctor_notice"
                android:text="您有一条新的回答，请点击查看。"
                android:textColor="@color/app_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_doctor_notice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_text_num_bg"
                android:gravity="center"
                android:text="12"
                android:textSize="10sp"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>