<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/view_bg"
              android:orientation="vertical">

    <include layout="@layout/layout_titlebar"/>

    <cn.qiyu.magicalcrue_patient.view.LayoutAddOutpatientView
        android:id="@+id/lav_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/app_white"
        app:left="@color/app_userInfor"
        app:right="@color/app_gray"
        app:text_Title="门诊时间"
        app:text_content="请输入"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_bg"/>

    <cn.qiyu.magicalcrue_patient.view.LayoutAddOutpatientView
        android:id="@+id/lav_hospital"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_white"
        app:left="@color/app_userInfor"
        app:right="@color/app_gray"
        app:text_Title="医院"
        app:text_content="请输入"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_bg"/>

    <cn.qiyu.magicalcrue_patient.view.LayoutAddOutpatientView
        android:id="@+id/lav_departments"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_white"
        app:left="@color/app_userInfor"
        app:right="@color/app_gray"
        app:text_Title="科室"
        app:text_content="请输入"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_bg"/>

    <RelativeLayout
        android:id="@+id/rl_doctor_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/doctor"
            android:textColor="@color/app_userInfor"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_doctor_name_arrows"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/mine_arrows"/>

        <EditText
            android:id="@+id/et_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_doctor_name_arrows"
            android:background="@null"
            android:focusable="true"
            android:gravity="right|center_vertical"
            android:hint="请输入"
            android:maxLines="1"
            android:textColor="@color/app_gray"
            android:textColorHint="@color/app_gray"
            android:textCursorDrawable="@null"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_camera"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/app_white">

        <ImageView
            android:id="@+id/iv_quiz_pic"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/camera"/>

        <TextView
            android:id="@+id/tv_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@id/iv_quiz_pic"
            android:text="@string/quizText"
            android:textColor="@color/app_userInfor"
            android:textSize="@dimen/text_size_small2"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@color/app_white"
        android:horizontalSpacing="5dp"
        android:numColumns="4"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:verticalSpacing="5dp"/>


</LinearLayout>