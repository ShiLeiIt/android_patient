<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="81dp"
              android:layout_marginTop="10dp"
              android:background="@color/app_white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_doctor_notice"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@color/app_white">

        <ImageView
            android:id="@+id/iv_doctor_notice"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@drawable/doctor_notice"/>

        <TextView
            android:id="@+id/tv_doctor_notic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="19dp"
            android:maxLength="10"
            android:layout_toRightOf="@id/iv_doctor_notice"
            android:text="@string/doctorNotice"
            android:textColor="@color/app_userInfor"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_doctor_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doctor_notic_title"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="28dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@id/iv_doctor_notice"
            android:text="您有一条新的回答，请点击查看。9999999999999999999999999999999999"
            android:textColor="@color/app_gray"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_hyperlink"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:background="#E5E5E5"
            android:drawableLeft="@drawable/home_all_serve"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="这是一个超链接，这里是显示链接标题文本"
            android:textColor="@color/app_gray"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_doctor_notice_date"
            android:layout_marginRight="15dp"
            android:textColor="@color/app_gray"
            android:text="2017-12-5"
            android:layout_marginTop="19dp"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_doctor_notice_num"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_doctor_notice_date"
            android:background="@drawable/shape_doctor_notice_unread_show"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_bg"/>

</LinearLayout>