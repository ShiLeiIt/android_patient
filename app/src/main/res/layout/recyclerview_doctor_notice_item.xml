<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="151dp"
              android:layout_marginTop="10dp"
              android:background="@color/app_white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="16dp"
        android:background="@color/app_white"
        >

        <ImageView
            android:id="@+id/msg_unread"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/doctor_notice_msg_unread"/>

        <TextView
            android:id="@+id/tv_doctor_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/msg_unread"
            android:text="医生公告"
            android:textColor="@color/app_userInfor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_doctor_notice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:text="未读"
            android:textColor="@color/app_userInfor"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_hyperlink"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#E5E5E5"
        android:drawableLeft="@drawable/home_all_serve"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="这是一个超链接，这里是显示链接标题文本"
        android:textColor="@color/app_gray"
        android:textSize="14sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_doctor_notic_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="14dp"
        android:ellipsize="end"
        android:text="这是一个医生发给患者公告的标题"
        android:textColor="@color/app_userInfor"
        android:textSize="14sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_doctor_notice_date"
        android:layout_marginLeft="15dp"
        android:textColor="@color/app_gray"
        android:text="2017-12-5"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>