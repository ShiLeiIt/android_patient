<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@null"
              android:orientation="vertical"
              tools:context=".activity.AppLatestVersionActivity">

    <TextView
        android:id="@+id/tv_version_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="发现新版本"
        android:textColor="@color/app_black"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content">
        <View style="@style/view_rule"/>

        <TextView
            android:id="@+id/tv_version_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:text="请升级到新版本以获得更好体验"
            android:textColor="@color/app_black"/>

    </RelativeLayout>

    <View style="@style/view_rule"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_version_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selected_confirm"
            android:clickable="true"
            android:gravity="center"
            android:text="稍后再说"
            android:textColor="@color/app_black"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view_bg"
            />

        <TextView
            android:id="@+id/tv_version_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selected_confirm"
            android:clickable="true"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/app_black"/>
    </LinearLayout>
</LinearLayout>
